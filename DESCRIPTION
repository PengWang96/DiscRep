Package: DiscRep
Title: Diagnosing Scientific Replicability through Probabilistic Distinguishability
Version: 0.1.2
Authors@R: 
    c(person("Peng", "Wang", email = "wangpeng21@mails.jlu.edu.cn", role = c("aut", "cre")),
